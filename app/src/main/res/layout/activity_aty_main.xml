<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<!--商家活动管理界面-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/light_gray"
        android:id="@+id/ll_sort_btns">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:background="@color/sky_blue"
            android:layout_marginLeft="2dp"
            android:text="全部"
            android:layout_margin="2dp"
            android:id="@+id/tv_aty_all"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:background="@color/sky_blue"
            android:text="正在进行的活动"
            android:layout_margin="2dp"
            android:id="@+id/tv_aty_ing"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:background="@color/sky_blue"
            android:text="正在组团"
            android:layout_margin="2dp"
            android:id="@+id/tv_aty_organize_ing"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:background="@color/sky_blue"
            android:text="组团完毕"
            android:layout_margin="2dp"
            android:id="@+id/tv_aty_organize_over"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:background="@color/sky_blue"
            android:text="活动结束"
            android:layout_margin="2dp"
            android:id="@+id/tv_aty_finish"/>

    </LinearLayout>

    <!--活动listview-->
    <LinearLayout
        android:id="@+id/aty_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/ll_sort_btns"
        android:layout_above="@+id/ll_create_new_aty">

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/light_gray"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/ll_create_new_aty">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:text="创建新活动"/>
    </LinearLayout>

</RelativeLayout>