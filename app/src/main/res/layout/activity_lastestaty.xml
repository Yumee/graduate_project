<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--商家活动管理界面-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/light_gray"
        android:id="@+id/ll_sort_btns">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:background="@color/sky_blue"
            android:layout_marginLeft="2dp"
            android:text="最新活动"
            android:layout_margin="2dp"
            android:id="@+id/tv_latest_aty"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:background="@color/sky_blue"
            android:text="活动推荐"
            android:layout_margin="2dp"
            android:id="@+id/tv_my_remo"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:background="@color/sky_blue"
            android:text="我的参与"
            android:layout_margin="2dp"
            android:id="@+id/tv_my_aty"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:background="@color/sky_blue"
            android:text="历史活动"
            android:layout_margin="2dp"
            android:id="@+id/tv_history"/>


    </LinearLayout>

    <!--活动listview-->
    <LinearLayout
        android:id="@+id/aty_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/ll_sort_btns"
        android:layout_above="@+id/ll_create_new_aty">

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/light_gray"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/ll_create_new_aty">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:text="滚动条"/>
    </LinearLayout>

</RelativeLayout>