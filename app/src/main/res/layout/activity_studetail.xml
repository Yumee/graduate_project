<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="个人详情"
        android:gravity="center"
         />

    <!--商家详情布局-->
    <LinearLayout
        android:id="@+id/rl_aty"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >
        <LinearLayout
            android:id="@+id/ly_atyname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">
            <TextView
                android:id="@+id/aty_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="姓名"
                android:textSize="20sp"/>
            <EditText
                android:id="@+id/et_user_name"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:hint="请输入商家名称"
                android:textSize="16sp"
                android:textAlignment="center"
                android:singleLine="true"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_shoppwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="密码"
                android:textSize="20sp"/>
            <EditText
                android:id="@+id/et_user_pwd"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:hint="请输入新密码"
                android:textSize="16sp"
                android:textAlignment="center"
                android:singleLine="true"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            >
            <TextView
                android:id="@+id/useAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="年龄"
                android:textSize="20sp"/>
            <EditText
                android:id="@+id/et_user_age"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:hint="请输入商家地址"
                android:textSize="16sp"
                android:textAlignment="center"
                android:inputType="number"
                android:singleLine="true"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_atyAddr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            >
            <TextView
                android:id="@+id/atyAddr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="城市"
                android:textSize="20sp"/>
            <EditText
                android:id="@+id/et_user_Addr"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:hint="请输入商家地址"
                android:textSize="16sp"
                android:textAlignment="center"
                android:singleLine="true"/>
        </LinearLayout>

        <LinearLayout
        android:id="@+id/ly_shopRank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        >
        <TextView
            android:id="@+id/shopRank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="昵称"
            android:textSize="20sp"/>
        <EditText
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/et_user_nickname"
            android:textAlignment="center"
            android:hint="请输入新昵称"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly_user_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        >
        <TextView
            android:id="@+id/user_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="学号"
            android:textSize="20sp"/>
        <EditText
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:id="@+id/et_user_number"

            android:hint="请输入新学号"
            android:textAlignment="center"
            />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_shop_loginbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >

            <Button
                android:id="@+id/btn_update_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="确认修改"/>
            <Button
            android:layout_marginLeft="45dp"
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="取消修改"
            />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

